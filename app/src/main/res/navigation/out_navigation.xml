<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/out_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.bersih.zwallet.ui.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/loginActionRegister"
            app:destination="@id/registerFragment"/>
        <action
            android:id="@+id/loginActionForgot"
            app:destination="@id/forgotFragment" />
        <action
            android:id="@+id/action_loginFragment_to_createPinFragment"
            app:destination="@id/createPinFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.bersih.zwallet.ui.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/registerActionLogin"
            app:destination="@id/loginFragment"/>
    </fragment>
    <fragment
        android:id="@+id/forgotFragment"
        android:name="com.bersih.zwallet.ui.auth.forgot.ForgotFragment"
        android:label="ForgotFragment" >
        <action
            android:id="@+id/forgotActionConfirmPassword"
            app:destination="@id/confirmPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/confirmPasswordFragment"
        android:name="com.bersih.zwallet.ui.auth.forgot.ConfirmPasswordFragment"
        android:label="ConfirmPasswordFragment" />
    <fragment
        android:id="@+id/createPinFragment"
        android:name="com.bersih.zwallet.ui.auth.pin.CreatePinFragment"
        android:label="CreatePinFragment" />
</navigation>