<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_back_button">

            <TextView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginVertical="20dp"
                android:drawableStart="@drawable/ic_baseline_arrow_back_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginStart="10dp"
                android:text="@string/changePin"
                style="@style/TextView.thirdSizeText"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <TextView
            android:id="@+id/changePinDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="40dp"
            android:textAlignment="center"
            style="@style/TextView.fifthSizeText"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:text="@string/changePinDesc"/>

        <LinearLayout
            android:id="@+id/inputCreatePin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/changePinDesc">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_otp_input"
                android:padding="20dp"
                android:layout_marginEnd="10dp"
                android:hint="_"
                android:inputType="number" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_otp_input"
                android:padding="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="_"
                android:inputType="number" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_otp_input"
                android:padding="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="_"
                android:inputType="number" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_otp_input"
                android:padding="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="_"
                android:inputType="number" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_otp_input"
                android:padding="20dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="_"
                android:inputType="number" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_otp_input"
                android:padding="20dp"
                android:layout_marginStart="5dp"
                android:hint="_"
                android:inputType="number" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_confirm"
            android:textColor="@color/white"
            style="@style/TextView.Medium"
            android:textAllCaps="false"
            android:background="@drawable/background_button_auth"
            android:layout_marginTop="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputCreatePin"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>