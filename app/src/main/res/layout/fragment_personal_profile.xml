<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    tools:context=".ui.main.profile.PersonalProfileFragment">

    <TextView
        android:id="@+id/personalDesc"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="16dp"
        android:paddingTop="40dp"
        android:layout_height="wrap_content"
        android:text="@string/personalProfileDesc"
        style="@style/personalDesc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/personalDesc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name"
                style="@style/TextView.sixthSizeText"
                android:background="@drawable/background_auth"
                android:layout_marginTop="40dp"
                android:textColor="#7A7886"/>

            <TextView
                android:id="@+id/firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Klin Agusta"
                android:layout_marginTop="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>